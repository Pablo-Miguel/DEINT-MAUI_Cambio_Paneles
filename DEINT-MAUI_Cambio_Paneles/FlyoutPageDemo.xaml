<?xml version="1.0" encoding="utf-8" ?>
<FlyoutPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="DEINT_MAUI_Cambio_Paneles.FlyoutPageDemo"
             Title="FlyoutPageDemo"
            FlyoutLayoutBehavior="Popover">
    <FlyoutPage.Flyout>
        <ContentPage Title="My App" BackgroundColor="Green">
            <Label Text="Hola mundo desde el Flyout" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
        </ContentPage>
    </FlyoutPage.Flyout>

    <FlyoutPage.Detail>
        <ContentPage Title="My App" BackgroundColor="White">
            <Label TextColor="Black" Text="Hola mundo desde el Detail" VerticalTextAlignment="Center" HorizontalTextAlignment="Center"/>
        </ContentPage>
    </FlyoutPage.Detail>
    
</FlyoutPage>